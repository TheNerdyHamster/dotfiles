source_if_exists () {
	if test -r "$1"; then
		source "$1"
	fi
}

# Source
source_if_exists $HOME/.zsh/aliases

# Autoload 
autoload -U zmv
autoload -U promptinit && promptinit
autoload -U colors && colors
autoload -U compinit && compinit

# Export
export EDITOR=nvim
export VISUAL=nvim

# Shell integrations
{{- if .starship_enable }}
eval "$(starship init zsh)"
{{- end }}
